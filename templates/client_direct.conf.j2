# local settings for the client "{{ item.name }}"
[Interface]
PrivateKey = {{ item.private_key }}
Address = {{ item.address }}
ListenPort = 51821
DNS = 8.8.8.8

# remote settings for Hub
[Peer]
PublicKey = {{ hostvars["internet_gateway"].wireguard_public_key }}
Endpoint = {{ hostvars["internet_gateway"].wireguard_endpoint }}:{{ hostvars["internet_gateway"].wireguard_port }}
AllowedIPs = 0.0.0.0/0, ::/0
